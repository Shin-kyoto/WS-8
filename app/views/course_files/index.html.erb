<p id="notice"><%= notice %></p>

<h1>Course Files</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Filename</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_files.each do |course_file| %>
      <tr>
        <td><%= course_file.title %></td>
        <td><%= course_file.filename %></td>
        <td><%= course_file.comment %></td>
        <td><%= link_to 'Show', course_file %></td>
        <td><%= link_to 'Edit', edit_course_file_path(course_file) %></td>
        <td><%= link_to 'Destroy', course_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

