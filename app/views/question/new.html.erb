
<h2 class="text-lg-center">
    
</h2>

<div class="callout callout-info card shadow-sm m-3">

    <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
    <% end %>

    <%= form_with model: @question, :url => {:action => :create}, local: true do |q| %>
    <h5 class="text-info">タイトル</h5>
    <%= q.text_field :title, class:"form-control mb-2", rows:"15", placeholder:"タイトルを入力してください"%>
    <h5 class="text-info">質問内容</h5>
    <%= q.text_area :body, class:"form-control mb-2", rows:"15", placeholder:"質問内容を入力してください"%>
    <%= q.hidden_field :user_id, :value => current_user.id%>
    <%= q.hidden_field :lesson_id , :value => params[:id]%>
    <%= q.submit "投稿する", class:"btn btn-info btn-block w-25", :required => true%>
    <% end %>

</div>

<div class="callout callout-warning card shadow-sm m-3">
    <button type="button" class="btn btn-warning btn-block w-25">質問せずに戻る</button>
</div>